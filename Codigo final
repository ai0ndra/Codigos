#include <ServoEasing.hpp>

ServoEasing SERVO1;
ServoEasing SERVO2;
ServoEasing SERVO3;
ServoEasing SERVO4;
ServoEasing SERVO5;

// VELOCIDAD para el movimiento normal (Grados por segundo)
int velocidad = 30; 
int velocidadInicial = 5; // Velocidad MUY lenta para el inicio
int espera    = 1000;

// Función para alcanzar la posición inicial de forma controlada
void alcanzarHomeConPasos(ServoEasing &servo, int pin, int destino) {
  servo.attach(pin);
  
  // Usamos la librería para mover al destino con la velocidad inicial lenta
  servo.easeTo(destino, velocidadInicial);

  // Esperamos a que el movimiento termine antes de continuar con el siguiente servo
  while (servo.isMovingAndEasing()) {
    delay(1);
  }
}

void setup() {
  // ----- PASO 1: CONFIGURAR EL TIPO DE MOVIMIENTO -----
  SERVO1.setEasingType(EASE_CUBIC_IN_OUT);
  SERVO2.setEasingType(EASE_CUBIC_IN_OUT);
  SERVO3.setEasingType(EASE_CUBIC_IN_OUT);
  SERVO4.setEasingType(EASE_CUBIC_IN_OUT);
  SERVO5.setEasingType(EASE_CUBIC_IN_OUT);

  // ----- PASO 2: ALCANZAR POSICIÓN INICIAL (90) LENTAMENTE -----
  // Esto se hace uno por uno de forma secuencial con una espera entre cada uno.
  alcanzarHomeConPasos(SERVO1, 23, 90);
  delay(espera);
  alcanzarHomeConPasos(SERVO2, 33, 90);
  delay(espera);
  alcanzarHomeConPasos(SERVO3, 32, 90);
  delay(espera);
  alcanzarHomeConPasos(SERVO4, 25, 90);
  delay(espera);
  alcanzarHomeConPasos(SERVO5, 22, 90);
  delay(espera);

  delay(espera);
}

void loop() {
  // -------- SECUENCIA 1: IR A HOME (90) CON VELOCIDAD CONTROLADA --------
  SERVO1.easeTo(90, velocidad);
  SERVO2.easeTo(90, velocidad);
  SERVO3.easeTo(90, velocidad);
  SERVO4.easeTo(90, velocidad);
  SERVO5.easeTo(90, velocidad);
  delay(espera);

  // -------- SECUENCIA 2: IR A TRABAJO CON VELOCIDAD CONTROLADA --------
  SERVO1.easeTo(40, velocidad);
  SERVO2.easeTo(40, velocidad);
  SERVO3.easeTo(95, velocidad);
  SERVO4.easeTo(54, velocidad);
  SERVO5.easeTo(41, velocidad);
  delay(espera);
}
